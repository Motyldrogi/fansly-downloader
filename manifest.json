{
  "name": "Fansly.com Downloader",
  "description": "Adds a download button to fansly feed and image gallery.",
  "version": "2.0.6",
  "manifest_version": 3,
  "web_accessible_resources": [
    {
      "resources": [
        "ffmpeg/ffmpeg.min.js",
        "ffmpeg/ffmpeg-core.js",
        "ffmpeg/ffmpeg-core.wasm",
        "ffmpeg/ffmpeg-core.worker.js"
      ],
      "matches": ["https://fansly.com/*"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["https://fansly.com/*"],
      "js": ["content.js", "ffmpeg/ffmpeg.min.js", "ffmpeg/ffmpeg-core.js"],
      "css": ["style.css"],
      "all_frames": true
    }
  ],
  "icons": {
    "16": "/images/icon-16.png",
    "32": "/images/icon-32.png",
    "48": "/images/icon-48.png",
    "128": "/images/icon-128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; wasm-src 'self'; object-src 'self'"
  },
  "cross_origin_embedder_policy": {
    "value": "require-corp"
  },
  "cross_origin_opener_policy": {
    "value": "same-origin"
  }
}
